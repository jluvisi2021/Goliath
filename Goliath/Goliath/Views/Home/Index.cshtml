@{
    ViewData["Title"] = "Home";
}
@section UniqueHeader {
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/HomeStyle.css" asp-append-version="true" />
}
<header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light border-bottom">
        <a class="navbar-brand" href="#!">
            <i class="fas fa-shield-alt"></i>
            Goliath
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a id="home-nav" class="nav-item nav-link active" href="#">
                    <i class="fas fa-home mr-2"></i>Home <span class="sr-only">(current)</span>
                </a>
                <a id="features-nav" class="nav-item nav-link" href="#">
                    <i class="fas fa-star mr-2"></i>Features
                </a>
                <a id="privacy-nav" class="nav-item nav-link" href="#">
                    <i class="fas fa-cookie mr-2"></i>Privacy & Security
                </a>
                <a id="contact-nav" class="nav-item nav-link" href="#">
                    <i class="fas fa-envelope mr-2"></i>Contact
                </a>
            </div>
        </div>
    </nav>
</header>

<main class="container-fluid">
    <section id="vanta-js"></section>
    <section class="row text-white mt-3">
        <div class="col-12">
            <article class="row d-flex justify-content-center">
                <span id="g-title" class="display-3 font-weight-bold">
                    <i class="fas fa-shield-alt mr-2"></i>
                    <span class="hvr-pop pointer-default">Goliath</span>
                    <i class="fas fa-shield-alt ml-2"></i>
                </span>
            </article>
            <article class="row d-flex justify-content-center">
                <span id="g-title-description" class="h2 font-weight-normal">
                    <i>
                        A simple and secure password manager for the Web.
                    </i>
                </span>
            </article>
        </div>
    </section>
    <section class="row">
        <img src="~/images/iphone-mockup.png" class="img-fluid w-25 h-25 hvr-rotate" />
        <article class="col-6">
            <hr class="text-white bg-white" style="opacity: 0.5;" />
            <div class="align-content-lg-end">
                <div class="card text-center" style="opacity: 0.85;">
                    <div class="card-body">
                        <h4 class="card-title">Start using Goliath Now:</h4>
                        <p class="card-text">
                            <i>
                                Goliath requires an account to store personal information.
                            </i>
                        </p>
                        <hr />
                        <a asp-controller="Auth" asp-action="RegisterMethod" target="_blank" class="btn btn-primary w-50 hvr-grow mb-3">
                            <span class="fas fa-external-link-alt mr-2"></span>Register New Account
                        </a>

                        <a asp-controller="Auth" asp-action="Login" target="_blank" class="btn btn-primary w-50 hvr-grow mb-3">
                            <span class="fas fa-sign-in-alt mr-2"></span>Sign In with Existing Account
                        </a>
                        <br />
                        <a href="#!" class="hvr-push">
                            <i class="fas fa-question-circle"></i> Need help logging in?
                        </a>
                    </div>
                </div>
                <hr class="text-white bg-white" style="opacity: 0.5;" />
                <br />
                <div class="text-center pt-5">
                    <h3 class="text-white">Scroll Down To Learn More About Goliath</h3>
                    <i class="fas fa-arrow-circle-down fa-4x text-white pointer-cursor hvr-grow pt-3"></i>
                </div>
            </div>
        </article>
        <div class="col-3" data-aos="fade-up">
            <div class="card bg-primary text-white mb-3 text-center w-75 hvr-hang">
                <div class="card-body">
                    <h4>
                        <span>New Updates</span>
                        <i class="fas fa-wrench"></i>
                    </h4>

                    <hr />
                    <blockquote class="card-blockquote">
                        <p>
                            <strong>
                                Version: X.X.X.X
                            </strong>
                            <div class="text-left">
                                <span class="hvr-grow pointer-cursor">
                                    <i class="fas fa-plus-square text-success"></i>
                                    Added something.
                                </span>
                                <br />
                                <span class="hvr-grow pointer-cursor">
                                    <i class="fas fa-plus-square text-success"></i>
                                    Added something else.
                                </span>
                                <br />
                                <span class="hvr-grow pointer-cursor">
                                    <i class="fas fa-minus-square text-danger"></i>
                                    Removed something.
                                </span>
                            </div>

                            <br />
                            <i class="far fa-clock mr-2"></i><i>2 days ago.</i>
                        </p>
                        <hr />
                        <footer>
                            Follow new updates
                            <a class="text-white font-italic" href="#!" title="Source Title">at the official GitHub.</a>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>
</main>
@*JS Libraries for Animation*@
