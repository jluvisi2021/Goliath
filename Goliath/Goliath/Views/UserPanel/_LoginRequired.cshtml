@using Goliath.Models
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager;
@{
    Layout = "~/Views/Shared/Layouts/_UserPanel.cshtml";
}
@*If the user is not signed in then show them the sign in message.*@
@if (!_signInManager.IsSignedIn(User))
{
    IgnoreBody();

    <article>
        <div class="container pt-5">
            <div class="row">
                <div class="col-12 pt-5">
                    <i class="fas fa-times-circle fa-4x text-danger"></i>
                </div>
                <div class="col-12">
                    <h2><span style="color: darkred;">Access Denied.</span></h2>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-12">
                    <h2>You must be logged in to view/edit this page.</h2>
                    <a asp-controller="Auth" asp-action="Index" class="btn btn-primary mt-3 w-25">
                        <span class="fas fa-sign-in-alt mr-2"></span>Login
                    </a>
                </div>
            </div>
        </div>
    </article>
}
else
{
    <article>
        @RenderBody()
    </article>
}