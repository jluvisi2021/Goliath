@model Goliath.Models.ProfileSettingsGeneralModel
@{ 
    var user = await _repository.GetUserByName(User.Identity.Name);
}

<p id="option-text">CHANGE PHONE NUMBER</p>
<div class="ht-tm-element input-group mb-3">
    <div class="input-group-prepend ">
        <button class="btn btn-outline-primary" type="button">
            <i class="fas fa-mobile-alt"></i>
        </button>
    </div>
    @if (_repository.HasPhoneNumber(user))
    {
        <input asp-for="CurrentPhoneNumber" value="Current Number..." placeholder="" required="" autofocus="" class="form-control shadow-sm px-2 rounded-right" readonly />

    }
    else
    {
        <input asp-for="CurrentPhoneNumber" value="None Specified" placeholder="" required="" autofocus="" class="form-control shadow-sm px-2 rounded-right" readonly />
    }

</div>
<div class="ht-tm-element input-group mb-3">
    <div class="input-group-prepend ">
        <button class="btn btn-outline-primary" type="button">
            <i class="fas fa-mobile-alt"></i>
        </button>
    </div>

    <input asp-for="NewPhoneNumber" placeholder="Enter New Phone." required="" autofocus="" class="form-control shadow-sm px-2 rounded-right" />
</div>
@if (_repository.HasConfirmedPhoneNumber(user))
{
    <span class="badge badge-success">Phone Number Confirmed</span>
}
else
{
    if (_repository.HasPhoneNumber(user))
    {
        <span class="badge badge-danger">Phone Number Not Confirmed</span>
        <br />
        <a href="#!">Click to confirm your phone number.</a>
    }

}