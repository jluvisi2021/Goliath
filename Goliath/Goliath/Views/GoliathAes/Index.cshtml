@{
    ViewData["Title"] = "AES";
}
@section UniqueHeader {
    <link href="~/css/GoliathAes/GoliathAesStyle.css" rel="stylesheet" asp-append-version="true" />
    <script src="~/js/GoliathAes/GoliathAesScript.js" asp-append-version="true"></script>
}
<main id="outer">
    <section id="inner">
        <article id="front" class="p-5">
            @if (User.Identity.Name != null)
            {
                <span class="text-muted">Welcome, @User.Identity.Name</span>
            }

            <div class="container-fluid">
                <div class="row justify-content-center">
                    <span class="display-4">Goliath AES Tool Manager</span>
                </div>
                <hr />
                <div class="row text-center">
                    <span class="text-muted">
                        <em>Goliath AES Tool Manager</em> is a tool which Goliath offers for decrypting data that Goliath servers have already encrypted.
                        <br />
                        The tool manager is available to anonymous users who are not logged in.
                    </span>
                </div>
                <hr />
                <div class="row">
                    <div class="card">

                        <div class="card-body">
                            <h4 class="card-title">Select a Tool Below</h4>
                            <hr />
                            <p class="card-text">
                                <div>
                                    <span class="h6 text-muted text-capitalize">DECRYPT USER DATA FILE</span>
                                    <br />
                                    <span class="text-muted font-italic">Decrypt a downloaded user data file using a private key.</span>
                                </div>
                            </p>
                            <a asp-action="@nameof(GoliathAesController.DecryptUserData)" class="btn btn-primary"><i class="fas fa-share-square fa-fw mr-1"></i>Use Tool</a>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        

    </section>
</main>