@using Newtonsoft.Json
<div class="modal fade" id="two-factor-enabled" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Two Factor Enabled</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pb-0">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Success <i class="fas fa-check-circle fa-fw"></i></h4>
                    You have <strong><u>enabled</u></strong> Two-Factor Authentication.
                    <hr />
                    <strong>Recovery Codes:</strong>
                    @{
                        List<string> codes = JsonConvert.DeserializeObject<List<string>>((string)TempData[TempDataKeys.TwoFactorRecoveryCodes]);
                    }
                    <hr />
                    <a class="btn btn-primary" href="#!">
                        <i class="fas fa-file-pdf fa-fw mr-1"></i>
                        Download PDF
                    </a>
                    <a class="btn btn-primary" href="#!">
                        <i class="fas fa-window-restore fa-fw mr-1"></i>
                        View Codes in Browser
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#two-factor-enabled').modal('toggle')
</script>