@using Goliath.Models;
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager;
@*
    Layout for Authentication Panel.
    - Logins
    - Registering
    - Forgot Password
    - Login with OAuth
    - Verify Email
    - Etc.
*@

@{
    Layout = "_Layout";
}
@* Specific to _AuthenticationPanel. *@
@section UniqueHeader {
    <link href="~/css/Auth/LoginStyle.css" rel="stylesheet" />
    <script src="~/js/Auth/AuthenticationScript.js"></script>
}

@*If the user is logged in then redirect them to userpanel.*@
@if (_signInManager.IsSignedIn(User))
{
    Context.Response.Redirect(Url.Action("Index", "UserPanel"));

}

<section id="center-banner" style="position: absolute;">
    <!-- Dynamic Current Notifications -->
</section>
@*Center Content*@
<main id="outer">
    <section id="inner" class="container parent-container">
        <div class="row">

            <!-- Carousel Half -->
            <article class="col-md d-none d-md-flex bg-dark round-left" id="left-container">

                <div class="container h-100">
                    <div class="row align-items-center h-100">

                        <div class="col-12 mx-auto">
                            <article id="carouselExampleControls" class="carousel slide h-100" data-ride="carousel">
                                <ol class="carousel-indicators" style="padding-bottom: 2rem;">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>

                                <div class="carousel-inner" role="listbox">
                                    <div class="carousel-item active">
                                        <img class="d-block img-fluid round" src="@ViewData["CarouselImage1"]" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block img-fluid round" src="@ViewData["CarouselImage2"]" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block img-fluid round" src="@ViewData["CarouselImage3"]" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </article>
                        </div>
                    </div>
                </div>
            </article>

            <!-- The content half -->
            <article class="col-md-6 bg-light round-right" id="right-container">
                <!--<div class="container bg-light round parent-container" style="min-height: 100%;zoom: 1.15; margin-top: 3%" id="right-container">-->
                <div class="d-flex align-items-center py-5">

                    <!-- Header content-->
                    <div class="container-fluid">
                        <div class="row justify-content-md-center">
                            <div class="col-lg-10 col-xl-9 mx-auto">

                                <div class="text-center">
                                    <!-- Top Radio Buttons -->
                                    <div class=" ht-tm-element btn-group btn-group-toggle" data-toggle="buttons">

                                        <a asp-controller="Auth" asp-action="Index" class="btn btn-outline-primary">

                                            <input type="radio" name="options" id="login-radio-btn" autocomplete="off">
                                            Login
                                        </a>
                                        <a asp-controller="Auth" asp-action="RegisterMethod" class="btn btn-outline-primary">

                                            <input type="radio" name="options" id="register-radio-btn" autocomplete="off">
                                            Register
                                        </a>
                                        <div class="btn-group btn btn-outline-primary" id="other-head">
                                            <a id="other-dropdown" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <input type="radio" name="options" id="other-radio-btn" autocomplete="off">
                                                Other
                                            </a>
                                            <!-- Other Drop Down Start -->
                                            <div class="dropdown-menu drop-down" aria-labelledby="other-dropdown" x-placement="bottom-start">
                                                <a asp-controller="Auth" asp-action="ForgotUsername" id="forgot-username" class="dropdown-item">Forgot Username</a>
                                                <a asp-controller="Auth" asp-action="ForgotPassword" id="forgot-password" class="dropdown-item">Forgot Password</a>
                                                <a asp-controller="Auth" asp-action="VerifyEmail" id="verify-email" class="dropdown-item">Verify Email</a>
                                                <div class="dropdown-divider"></div>
                                                @*OAuth Login Methods*@
                                                <a class="dropdown-item py-xl-1" href="#!"><i class="fab fa-google px-sm-2 dropdown-bottom-icons"></i>Sign in with Google</a>
                                                <a class="dropdown-item" href="/idk"><i class="fab fa-microsoft px-sm-2 dropdown-bottom-icons"></i>Sign in with Microsoft</a>
                                                <a class="dropdown-item" href="/idk"><i class="fab fa-facebook-square px-sm-2 dropdown-bottom-icons"></i>Sign in with Facebook</a>
                                                <a class="dropdown-item" href="https://github.com/jluvisi2021/Goliath" target="_blank"><i class="fab fa-github px-sm-2 dropdown-bottom-icons"></i>View GitHub</a>
                                            </div>
                                            <!-- Other Drop Down End -->
                                        </div>
                                    </div>
                                    <!-- Radio Buttons End -->
                                    <hr />
                                    <div>
                                        <!-- Right Panel Header -->
                                        @RenderSection("RightContainerHeader", false)
                                        <!-- Right Panel Header End -->
                                    </div>
                                </div>

                                <div>
                                    <!-- Right Panel Body -->
                                    @RenderBody()
                                    <!-- Right Panel Body End -->
                                </div>
                            </div>
                        </div>
                    </div><!-- End -->
                </div>
            </article><!-- End -->
        </div>
    </section>
</main>

@section Scripts {
    <script type="text/javascript">
    @*Highlight individual button elements depending on the current page*@
    loadButtonElements("@ViewData["ButtonID"]");
    // Remove highlighting for a clicked nav item.
    $(".nav-item").click(function (e) {
        $(".nav-item").removeClass("active");
        $(e.target).addClass("active");
    });
    </script>
}